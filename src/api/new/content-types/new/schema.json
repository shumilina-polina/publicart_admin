{
  "kind": "collectionType",
  "collectionName": "news",
  "info": {
    "singularName": "new",
    "pluralName": "news",
    "displayName": "New"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "date": {
      "type": "date",
      "default": "2022-09-17",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 1,
      "maxLength": 50
    },
    "short_desc": {
      "type": "text",
      "required": true
    },
    "long_desc": {
      "type": "richtext",
      "required": true
    }
  }
}
